pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
function _init()
	t=0
	ship={sp=1,x=60,y=60}
	bullets = {}
end

function fire()
	local b = {
	sp=3,
	x=ship.x,
	y=ship.y,
	dx=0,
	dy=-3
	}
	add(bullets,b)
end

function _update()
	t+=1
	
	for b in all(bullets) do
		b.x+=b.dx
		b.y+=b.dy
		if b.x<0 or b.x>128 
			or b.y<0 or b.y>128 then
			del(bullets,b)
		end
	end
	
	if(t%6<3) then
		ship.sp=1
	else
		ship.sp=2
	end
	
	if btn(0) then ship.x-=2 end
	if btn(1) then ship.x+=2 end
	if btn(2) then ship.y-=2 end
	if btn(3) then ship.y+=2 end
	if btnp(4) then fire() end
end

function _draw()
	cls()
	print(#bullets)
	spr(ship.sp,ship.x,ship.y)
	for b in all(bullets) do
		spr(b.sp,b.x,b.y)
	end
end
